{
  "name": "vue-wave-player",
  "version": "1.0.8",
  "description": "Vue 3 audio player component with Telegram-style waveform visualization",
  "type": "module",
  "main": "./dist/vue-wave-player.umd.cjs",
  "module": "./dist/vue-wave-player.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/vue-wave-player.js",
      "require": "./dist/vue-wave-player.umd.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "build:lib": "vite build --mode lib",
    "type-check": "vue-tsc --noEmit"
  },
  "keywords": [
    "vue",
    "vue3",
    "audio",
    "player",
    "waveform",
    "voice",
    "telegram",
    "component"
  ],
  "author": "Spot <push@wespot.ru> (https://wespot.ru)",
  "license": "MIT",
  "homepage": "https://vue-wave-player.vercel.app",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/khudyakv/vue-wave-player.git"
  },
  "bugs": {
    "url": "https://github.com/khudyakv/vue-wave-player/issues"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "typescript": "~5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-css-injected-by-js": "^3.5.2",
    "vite-plugin-dts": "^3.7.0",
    "vue": "^3.4.0",
    "vue-tsc": "^1.8.0"
  }
}
